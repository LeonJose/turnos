<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Properties="clr-namespace:WpfApplication1.Properties" x:Class="WpfApplication1.MainWindow"
        Title="MainWindow" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid Background="White" RenderTransformOrigin="0.5,0.5" Margin="0,0,-8,-5" Opacity="0.8">
        <Button x:Name="btnRegistro" Content="Registrar" HorizontalAlignment="Left" Margin="138,253,0,0" VerticalAlignment="Top" Width="155" Height="39" Foreground="#FF141415" FontFamily="Times New Roman" Background="{x:Null}" BorderBrush="#FF0C76E0" Click="btnRegistro_Click_2"/>
        <Button x:Name="btnCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="338,253,0,0" VerticalAlignment="Top" Width="155" Height="39" FontFamily="Times New Roman" Background="{x:Null}" Foreground="Black" Click="btnCancelar_Click_1" BorderBrush="#FF0C76E0"/>
        <Label x:Name="lbltitulo" Content="Ingresa tu matricula " HorizontalAlignment="Left" Margin="123,102,0,0" VerticalAlignment="Top" FontFamily="Times New Roman"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Height="23" Margin="203,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" BorderBrush="#FF12E474"/>
        <Rectangle HorizontalAlignment="Center" Height="64" Stroke="#FF12EA74" VerticalAlignment="Top" Width="500" Margin="3,0,10,0">
            <Rectangle.DataContext>
                <Properties:Resources/>
            </Rectangle.DataContext>
        </Rectangle>
        <GroupBox Header="Registro para obtener tu turno " HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" Height="155" Width="486" FontFamily="Times New Roman" Foreground="#FF09090A" BorderBrush="#FF0C76E0"/>
        <Rectangle x:Name="rt_imagen" HorizontalAlignment="Left" Height="50" Margin="15,7,0,0" Stroke="Black" VerticalAlignment="Top" Width="481"/>
        <RadioButton x:Name="rbnEstudiante" Content="Soy Estudiante" HorizontalAlignment="Left" Margin="156,174,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="rbnOtro" Content="Otro" HorizontalAlignment="Left" Margin="156,194,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
